<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="items.xsd">

	<collectiontypes>
		<collectiontype code="GenderList" elementtype="Gender"
			autocreate="true" generate="true" type="list" />
		<collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum"
			autocreate="true" generate="true" type="set" />
	</collectiontypes>


	<enumtypes>
		<enumtype generate="true" code="SwatchColorEnum" autocreate="true"
			dynamic="true">
			<value code="BLACK" />
			<value code="BLUE" />
			<value code="BROWN" />
			<value code="GREEN" />
			<value code="GREY" />
			<value code="ORANGE" />
			<value code="PINK" />
			<value code="PURPLE" />
			<value code="RED" />
			<value code="SILVER" />
			<value code="WHITE" />
			<value code="YELLOW" />
		</enumtype>

		<!-- <enumtype generate="true" code="PriceOverrideReasonCode" autocreate="true" 
			dynamic="true"> <value code="REASON_1"/> <value code="REASON_2"/> <value 
			code="REASON_3"/> </enumtype> -->
	</enumtypes>

	<itemtypes>
		<itemtype code="TMPitem" autocreate="true" generate="true"
			jaloclass="de.hybris.platform.yacceleratorcore.jalo.TMPitem">
			<description>My Test item</description>
			<attributes>
				<attribute qualifier="reasonCode" type="PriceOverrideReasonCode">
					<persistence type="property" />
				</attribute>
				<attribute qualifier="myString" type="java.lang.String">
					<persistence type="property" />
				</attribute>
				<attribute qualifier="myPK" type="de.hybris.platform.core.PK">
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>
		<!-- Telesales -->
		<itemtype code="PriceOverrideReasonCode" autocreate="true"
			generate="true"
			jaloclass="de.hybris.platform.yacceleratorcore.jalo.PriceOverrideReasonCode">
			<description>Reason code for price override</description>
			<deployment table="PriceOverrideReasonCode" typecode="11901" />
			<attributes>
				<attribute qualifier="reasonNum" type="java.lang.Integer">
					<description>Number for reason code</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="reasonCode" type="localized:java.lang.String">
					<description>Text for reason code</description>
					<persistence type="property" />
					<modifiers optional="true" />
				</attribute>
				<attribute qualifier="isForShipping" type="java.lang.Boolean">
					<description>Is reason code used for shipping</description>
					<persistence type="property" />
					<defaultvalue>Boolean.TRUE</defaultvalue>
				</attribute>
				<attribute qualifier="isForItem" type="java.lang.Boolean">
					<description>Is reason code used for item</description>
					<persistence type="property" />
					<defaultvalue>Boolean.TRUE</defaultvalue>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype code="OldPriceOverrideReasonCode" autocreate="true"
			generate="true"
			jaloclass="de.hybris.platform.yacceleratorcore.jalo.OldPriceOverrideReasonCode">
			<description>Reason code for price override</description>
			<deployment table="OldPORC" typecode="11899" />
			<attributes>
				<attribute qualifier="reasonCode" type="java.lang.Integer">
					<description>Text for reason code</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="isForShipping" type="java.lang.Boolean">
					<description>Is reason code used for shipping</description>
					<persistence type="property" />
					<defaultvalue>Boolean.TRUE</defaultvalue>
				</attribute>
				<attribute qualifier="isForItem" type="java.lang.Boolean">
					<description>Is reason code used for item</description>
					<persistence type="property" />
					<defaultvalue>Boolean.TRUE</defaultvalue>
				</attribute>
			</attributes>
		</itemtype>
		<itemtype code="ReasonCodeLang" autocreate="true" generate="true"
			jaloclass="de.hybris.platform.yacceleratorcore.jalo.ReasonCodeLang">
			<description>Reason code for price override</description>
			<deployment table="ReasonCodeLang" typecode="11900" />
			<attributes>
				<attribute qualifier="languageCode" type="java.lang.String">
					<description>Language for reason code</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="reasonCode" type="java.lang.Integer">
					<description>Text for reason code</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="reasonCodeText" type="java.lang.String">
					<description>Language dependent text for reason code</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>

			</attributes>
		</itemtype>
		<itemtype code="PriceOverride" autocreate="true" generate="true"
			jaloclass="de.hybris.platform.yacceleratorcore.jalo.PriceOverride">
			<description>Basic class for a single price override on an item.</description>
			<deployment table="PriceOverride" typecode="11888" />
			<attributes>
				<attribute qualifier="cartEntry" type="de.hybris.platform.core.PK">
					<description>Corresponding PK of cart or order entry</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="cart" type="AbstractOrder">
					<description>Corresponding cart or order</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="initialTotalPrice" type="java.lang.Double">
					<description>Initial total price of item before first price override</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="oldTotalPrice" type="java.lang.Double">
					<description>Old total price of item before price override</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="newTotalPrice" type="java.lang.Double">
					<description>New total price of item after price override</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="currency" type="Currency">
					<description>Corresponding currency</description>
					<persistence type="property" />
					<modifiers optional="false" />
				</attribute>
				<attribute qualifier="reasonCode" type="PriceOverrideReasonCode">
					<description>Reason code for price override</description>
					<persistence type="property" />
				</attribute>
				<attribute qualifier="reasonText" type="java.lang.String">
					<description>Free text field for the reason for price override</description>
					<persistence type="property" />
				</attribute>
				<attribute qualifier="isApproved" type="java.lang.Boolean">
					<description>Has this price override been approved</description>
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>

		<!-- Add your item definitions here -->


		<!-- TypeGroups are for structure of this file only -->

		<typegroup name="Apparel">
			<itemtype code="ApparelProduct" extends="Product"
				autocreate="true" generate="true"
				jaloclass="de.hybris.platform.yacceleratorcore.jalo.ApparelProduct">
				<description>Base apparel product extension that contains additional attributes.</description>
				<attributes>
					<attribute qualifier="genders" type="GenderList">
						<description>List of genders that the ApparelProduct is designed for</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="de.hybris.platform.yacceleratorcore.jalo.ApparelStyleVariantProduct">
				<description>Apparel style variant type that contains additional attribute describing variant style.
				</description>
				<attributes>
					<attribute qualifier="style" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Color/Pattern of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>

					<attribute qualifier="swatchColors" type="SwatchColorSet">
						<description>A normalized color mapping to a standardized front-end navigable name.
						</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>

			</itemtype>

			<itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
				autocreate="true" generate="true"
				jaloclass="de.hybris.platform.yacceleratorcore.jalo.ApparelSizeVariantProduct">
				<description>Apparel size variant type that contains additional attribute describing variant size.
				</description>
				<attributes>
					<attribute qualifier="size" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Size of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

		<typegroup name="Electronics">
			<itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="de.hybris.platform.yacceleratorcore.jalo.ElectronicsColorVariantProduct">
				<description>Electronics color variant type that contains additional attribute describing variant color.
				</description>
				<attributes>
					<attribute qualifier="color" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Color of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

	</itemtypes>
</items>
